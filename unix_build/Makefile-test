VPATH = ..
CC = gcc
CXX = g++
CFLAGS = -fpermissive -m32 -fPIC -Wall -O2 -DLK_USE_WXWIDGETS `wx-config-28-ansi --cflags`
CXXFLAGS = $(CFLAGS)

TARGET = frees

OBJECTS = \
	lk_absyn.o \
	lk_env.o \
	lk_eval.o \
	lk_invoke.o \
	lk_lex.o \
	lk_math.o \
	lk_parse.o \
	lk_stdlib.o

$(TARGET) : $(OBJECTS)
	g++ -m32 -o $@ $^ $(CFLAGS) -I../../comlib ../testui/lkui.cpp ../testui/lksolve.cpp  ../../comlib/comlibwx28ux.a `wx-config-28-ansi --libs stc` `wx-config-28-ansi --libs`  -lcairo -lX11

clean:
	rm -rf *.o $(TARGET)

